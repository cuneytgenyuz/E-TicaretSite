
@{
    ViewBag.Title = "KategoriGuncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model TicaretProje.Models.Kategori


<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Güncelle
            </header>
            <div class="panel-body">
                <form role="form" action="/Admin/AdminKategori/KategoriGuncelle" method="post" class="form-horizontal tasi-form">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-10">

                            @Html.TextBoxFor(model => model.kategoriAdi, new { @class = "form-control" })

                        </div>
                    </div>
                    @Html.HiddenFor(x => x.kategoriId)
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">

                            @Html.TextBoxFor(model => model.aciklama, new { @class = "form-control" })

                        </div>
                    </div>
                    
                    <div class="form-group" align="center">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
