
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div align="center"><p><h3>ÜRÜN EKLE</h3> </p> </div>
            <div class="panel-body">
                <form role="form" action="/Admin/AdminUrun/UrunEkle" method="post" class="form-horizontal tasi-form">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="urunAdi">

                        </div>
                    </div>
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="l-name" class="form-control" name="aciklama">

                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Alış Fiyat</label><div class="col-lg-10">
                            <input type="text" class="spinner-input form-control" name="alısFiyat">
                        </div>

                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Satış Fiyat</label><div class="col-lg-10">
                            <input type="text" class="spinner-input form-control" name="satisFiyat">
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kategori</label><div class="col-lg-10">
                            <select class="form-control m-bot15" name="KategoriID">
                                @foreach (var kategori in ViewBag.Kategoriler)
                                {
                                    <option value="@kategori.kategoriId">@kategori.kategoriAdi</option>
                                }
                            </select>
                        </div>
                    </div>

                
                    <div class="form-group" align="center">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-success" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>