
@{
    ViewBag.Title = "UrunGuncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model TicaretProje.Models.Urun

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Ürün Güncelle
            </header>
            <div class="panel-body">
                <form role="form" action="/Admin/AdminUrun/UrunGuncelle" method="post" class="form-horizontal tasi-form">
                    <div class="form-group has-success">
                        <label class="col-lg-2 control-label">Ürün Adı</label>
                        <div class="col-lg-10">

                            @Html.TextBoxFor(model => model.urunAdi, new { @class = "form-control" })
                            
                        </div>
                    </div>
                    @Html.HiddenFor(x => x.urunId)
                    <div class="form-group has-error">
                        <label class="col-lg-2 control-label">Açıklama</label>
                        <div class="col-lg-10">

                            @Html.TextBoxFor(model => model.aciklama, new { @class = "form-control" })
                        
                        </div>
                    </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Alış Fiyat</label>
                        <div class="col-lg-10">

                            @Html.TextBoxFor(model => model.alısFiyat, new { @class = "form-control" })

                        </div>
                        </div>
                    <div class="form-group has-warning">
                        <label class="col-lg-2 control-label">Satış Fiyat</label>
                        <div class="col-lg-10">

                            @Html.TextBoxFor(model => model.satisFiyat, new { @class = "form-control" })

                        </div>
                        </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kategori:</label>
                        <div class="col-lg-10">

                            @Html.DropDownList("kategoriID", new SelectList(ViewBag.kategoriler, "kategoriId", "kategoriAdi"), new { @class = "form-control m-bot15" })
                        </div>
                    </div>
                     <div class="form-group" align="center">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>