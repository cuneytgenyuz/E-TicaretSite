
@{
    ViewBag.Title = "Ürünler";
}
@model IEnumerable<TicaretProje.Models.Urun>


<script src="~/Content/js/jquery-2.1.4.min.js"></script>
<script type="text/javascript">
jQuery.noConflict(true);
    $(document).ready(function myfunction() {
        $(".sepeteAt").click(function myfunctionn(){
            var id = $(this).attr("name");

            $.ajax({
                type: "GET",
                url: "/Urun/SepeteEkle",
                data: { id: uid },
                success: function myfunction() {
                    alert("Ürün sepete eklendi");
                },
                error: function myfunction() {
                   alert("Ürün sepete eklenemedi")
                }
            });

        });
    });
</script>


<div class="css-treeview">
    <div class="col-md-3">
        <h4>Kategoriler</h4>
        <ul class="tree-list-pad">
            @foreach(TicaretProje.Models.Urun item in Model)
            {

                <li>
                    <input type="checkbox" checked="checked" id="item-0" /><label for="item-0"><span></span>@item.Kategori.kategoriAdi</label>
                    <ul>
                        <li>
                            @*<input type="checkbox" id="item-0-0" /><label for="item-0-0"></label>*@
                            <ul>
                                <li><a href="/Urun/KategorilereGore/@item.Kategori.kategoriId">@item.urunAdi</a></li>

                            </ul>
                        </li>

                    </ul>
                </li>
            }
        </ul>

    </div>
</div>

<div class="single-pro">

    @foreach(TicaretProje.Models.Urun item in Model)
    {
        <div class="col-md-2 product-men">
            <div class="men-pro-item simpleCart_shelfItem">
                <div class="men-thumb-item">
                    <img src="@item.Resim.ilkResim" alt="" class="pro-image-front">
                    <img src="@item.Resim.ilkResim" alt="" class="pro-image-back">
                    <div class="men-cart-pro">
                        <div class="inner-men-cart-pro">
                            <a href="/Urun/Detay/@item.urunId" class="link-product-add-cart">Ürünü Göster</a>
                        </div>
                    </div>

                </div>
                <div class="item-info-product ">
                    <h4><a href="/Urun/Detay/@item.urunId">@item.urunAdi</a></h4>
                    <div class="info-product-price">
                        <span class="item_price">@item.satisFiyat TL</span>

                    </div>
                    <a title="Sepete Ekle" name="@item.urunAdi" class="item_add single-item hvr-outline-out button2">Sepete Ekle</a>
                </div>
            </div>
        </div>
    }



    <div class="clearfix"></div>
</div>
<div class="pagination-grid text-right">
    <ul class="pagination paging">
        <li><a href="/Content/#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
        <li class="active"><a href="#">1<span class="sr-only">(current)</span></a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
    </ul>
</div>




