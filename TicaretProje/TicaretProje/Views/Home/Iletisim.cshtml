
@{
    ViewBag.Title = "Iletisim";
}

<div class="contact">
    <div class="container">

        <div class="map wow fadeInDown animated" data-wow-delay=".5s">
            <h3 class="tittle">Adres</h3>
            <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d2482.432383990807!2d0.028213999961443994!3d51.52362882484525!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1423469959819" frameborder="0" style="border:0"></iframe>
        </div>
        <h3 class="tittle">İletişim Formu</h3>
        <form>
            <div class="contact-form2">
                <input type="text" value="Adınız" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name';}" required="">
                <input type="email" value="Email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email';}" required="">
                <textarea type="text" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Message...';}" required="">Mesaj...</textarea>
                <input type="submit" value="Gönder">
            </div>
        </form>
    </div>
</div>

